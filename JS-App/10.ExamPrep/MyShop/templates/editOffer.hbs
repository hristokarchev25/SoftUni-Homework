
{{> header}}
<h1>Edit Offer</h1>
<p class="message"></p>

<form action="/edit/{{offer.id}}" method="POST">
    <div>
        
        <input type="text" placeholder="Name..." value="{{offer.productName}}" name="productName">
    </div>
    <div>
        
        <input type="text" placeholder="Price..." value="{{offer.productPrice}}" name="productPrice">
    </div>
    <div>
       
        <input type="text" placeholder="Image url..." value="{{offer.imageUrl}}" name="imageUrl">
    </div>
    <div>
        
        <textarea placeholder="Give us some description about this offer..."
            name="productDescription">{{offer.productDescription}}</textarea>
    </div>
    <div>
       
        <input type="text" placeholder="Brand..." value="{{offer.productBrand}}" name="productBrand">
    </div>
    <div>
        <button>Edit</button>
    </div>
</form>
{{> footer}}
